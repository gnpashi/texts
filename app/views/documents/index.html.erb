
<table class="w-full">
  <thead class="w-full">
    <tr>
      <th><%= t("doc-title") %></th>
      <th><%= t("author") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @documents.each do |document| %>
      <tr class="border-b">
        <td class=""><%= link_to document.title, document %></td>
        <td class=""><%= document.author %></td>
        <td><%= link_to "<i class='material-icons'>edit</i>".html_safe, edit_document_path(document) %>
        <%= link_to "<i class='material-icons'>delete</i>".html_safe, document, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "<i class='material-icons'>add</i>".html_safe, new_document_path, class:"bg-blue-500 hover:bg-blue-700 text-white  h-10 w-10 flex items-center justify-center rounded-full" %>
