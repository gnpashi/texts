
<table class="w-full">
  <thead class="w-full">
    <tr>
      <th><%= t("title") %></th>
      <th><%= t("author") %></th>
      <th><%= t("content") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @documents.each do |document| %>
      <tr class="border-b">
        <td class=""><%= document.title %></td>
        <td class=""><%= document.author %></td>
        <td class=""><%= document.content %></td>
        <td><%= link_to 'Show', document %>
        <%= link_to 'Edit', edit_document_path(document) %>
        <%= link_to 'Destroy', document, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Document', new_document_path %>
