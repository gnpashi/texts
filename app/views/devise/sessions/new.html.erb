<div class="">
	<%= image_tag "logo.svg" %>
</div>
<% content_for :devise_form do %>
  <h2 class="heading text-4xl font-bold pt-4 mb-8">התחברות</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="mb-6">
		<%= f.label t("email"), class:"label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
  </div>

  <div class="mb-6">
		<%= f.label t("password"), class:"label" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "input" %>
  </div>

  <div class="mb-6 flex">
    <% if devise_mapping.rememberable? -%>
      <%= f.check_box :remember_me, class:"mr-2 leading-tight" %>
			<%= f.label t("remember_me"), class:"block text-grey-darker" %>
    <% end -%>
  </div>

  <div class="md-6">
    <%= f.submit t('login'), class: "btn btn-default" %>
  </div>

<% end %>

<hr class="border mt-6" />

<%= render "devise/shared/links" %>
<% end %>

<%= render "devise/shared/form_wrap" %>
